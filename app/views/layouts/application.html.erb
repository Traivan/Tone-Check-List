<!DOCTYPE html>
<html>
<head>
  <title>CheckList</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
</head>
<body>

<nav class="navbar navbar-default">
	<div class="container">
		<div class="navbar-header">
			<%= link_to "CheckList", root_path, class:"navbar-brand"%>
		</div><!--nava-header-->
		<ul class="nav navbar-nav">
			<li><%= link_to "Sing Up", new_user_registration_path%></li>
			<% if current_user.present? %>
			<li><%=  link_to"Sign Out", destroy_user_session_path, method: :delete%></li>
			<%  else %>
			<li><%= link_to "Log In", new_user_session_path%></li>
			<% end %>
		</ul><!--container-->
		<%  if user_signed_in?%>
			<%= link_to"New Item", new_item_path, class: "navbar-text navbar-link navbar-right"%>
			<%  end%> 

	</div><!--container-->
</nav><!--navbar nva-default-->




	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
 <div class="container">
	<%= yield %> 	
 </div><!--end of contianer-->



</body>
</html>
