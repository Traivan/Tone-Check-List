<h1>This     is index page!</h1>
<% if user_signed_in? %>
	<div class="col-md-6 col-md-offset-3">
	<%  @items.each do |item|%>
		<% if item.completed? %>

		<div class="row item">
			<div class="col-md-8">
				<h3 style="opacity: 0,5;"><strike><%= link_to item.title, item %></strike></h3>
				<p style="opacity: 0,5;"><%=item.description%></p>
				<p style="opacity: 0,5"> complete <%=time_ago_in_words(item.completed_at)  %> ago</p>
			</div><!--col-md-8-->
			<div class="col-md-2">
				<p><%=  link_to complete_item_path(item), method: :patch do %></p>
					<i class="fa fa-lg fa-check"></i>
				<% end %>
			</div><!--col-md-2-->
			<div class="col-md-2">	
				<p><%= link_to item , method: :delete, data: {confirm: "Are you sure?"} do%></p>
				<i class="fa fa-lg fa-trash"> </i>
				<% end%>
			</div><!--col-md-2-->
		</div><!--row item-->
		<% else %>

		<div class="row item">
			<div class="col-md-8">
				<h3 ><%= link_to item.title, item %></h3>
				<p ><%=item.description%></p>
				<p> create <%=time_ago_in_words(item.created_at)  %> ago</p>
			</div><!--col-md-8-->
			<div class="col-md-2">
				<p><%=  link_to complete_item_path(item), method: :patch do %></p>
					<i class="fa fa-lg fa-check"></i>
				<% end %>
			</div><!--col-md-2-->
			<div class="col-md-2">
				<p><%= link_to item , method: :delete, data: {confirm: "Are you sure?"} do%></p>
				<i class="fa fa-lg fa-trash"> </i>
				<% end%>
			</div><!--col-md-2-->
		</div><!--row item-->
		<%end%><!--if item.completed?-->
		
	<% end -%> <!--@items.each do |item|-->
	</div><!--col-md-6 col-md-offset-3"-->
<%else%>
	<%= render 'layouts/static_landing_page'%>
<%end%><!--if user_signed_in? -->

